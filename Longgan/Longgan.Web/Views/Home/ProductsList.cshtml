@model PagedList.StaticPagedList<Longgan.Models.Home.Product>
@using PagedList
@using PagedList.Mvc
<link rel="stylesheet" type="text/css" href="~/Content/pretty/css/prettyPhoto.css" media="screen" />

<section class="colon14">
    <div class="singleheader">
        <div class="container">
            <div class="col-lg-6 col-sm-6 col-md-6">
                <div class="single-title">
                    <h3>产品展示</h3>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 col-md-6">
                <div class="breadcrumb-container">
                    <ul class="breadcrumb">
                        <li>@Html.ActionLink("首页", "Index")</li>
                        <li class="active">产品展示</li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <!-- START CONTENT AND SIDEBAR -->
  

    <div class="col-lg-10 col-md-10 col-sm-10 col-lg-offset-1">
        <div class="btn-group" role="group">
            <a href="@Url.Action("ProductsList")" class="btn btn-default">所有产品</a>
            <a href="@Url.Action("ProductsList", new { type="SY"})" class="btn btn-default">商用型热泵</a>
            <a href="@Url.Action("ProductsList", new { type="DY"})" class="btn btn-default">地源热泵</a>
            <a href="@Url.Action("ProductsList", new { type="KZ"})" class="btn btn-default">控制系列</a>
            <a href="@Url.Action("ProductsList", new { type="DQ"})" class="btn btn-default">电器元件</a>
            <a href="@Url.Action("ProductsList", new { type="KT"})" class="btn btn-default">空调产品</a>
            <a href="@Url.Action("ProductsList", new { type="GW"})" class="btn btn-default">高温空气源（电镀槽专用）</a>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="divider"></div>
    <div class="col-lg-12 col-md-12 col-sm-12">

        @*<div>
                @Html.PagedListPager((PagedList.IPagedList)Model, page => Url.Action("ProductsList", new { page = page, type = @ViewBag.type }), new PagedList.Mvc.PagedListRenderOptions { UlElementClasses = new List<string> { "pagination pagination-sm" }, MaximumPageNumbersToDisplay = 10, Display = PagedList.Mvc.PagedListDisplayMode.IfNeeded })
            </div>*@


        <ul class='gallery clearfix' style='list-style-type: none;padding-left:0px;'>
            @foreach (var item in Model)
            {
                string filePath = VirtualPathUtility.ToAbsolute(System.Configuration.ConfigurationManager.AppSettings["fileRoot"]);
                string picPath = string.Format("{0}/{1}", filePath, item.PicName);
                <li style='float:left;padding-right:15px;padding-bottom:15px;'>
                    <a href='@picPath' alt='@item.Title' rel='prettyPhoto[gallery1]' id="img1">
                        <img src='@picPath' class='img-thumbnail img-rounded' style='width:200px;height:200px;' alt='@item.Title' />
                    </a>
                    <div class="gallery-box-link" style="text-align:center;">
                        <h5>@Html.ActionLink(item.Title, "ProductsDetail", new { Id = item.Id })</h5>
                    </div>
                </li>
            }
        </ul>

        <div>
            @Html.PagedListPager((PagedList.IPagedList)Model, page => Url.Action("ProductsList", new { page = page, type = @ViewBag.type }), new PagedList.Mvc.PagedListRenderOptions { UlElementClasses = new List<string> { "pagination pagination-sm" }, MaximumPageNumbersToDisplay = 10, Display = PagedList.Mvc.PagedListDisplayMode.IfNeeded })
        </div>


    </div><!-- end content -->
    </div><!-- end container -->
    <!-- END CONTENT -->

</section><!-- end colon1 -->
@section Scripts {
    @Scripts.Render("~/Scripts/jquery.prettyPhoto.js");
    <script>
        $(function ()
        {
            $("a[rel^='prettyPhoto']").prettyPhoto({
                show_title: true,
                default_width: 800,
                default_height: 600,
                allow_resize: true
            });


        })
    </script>
}
