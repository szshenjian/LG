                        <p><img src="~/images/q1.jpg"/></p>
                    </div>
                </div>
            </div>

            <div id="content" class="col-lg-3 col-md-3 col-sm-6">
                <h2 class="general-title">
                    <span>我们的服务</span>
                </h2>

                <div class="single-stat">
                    <div class="col-lg-6 col-md-6 col-sm-6" data-effect="slide-bottom">
                        <div class="stat">
                            @{
                                List<Longgan.Models.Home.Product> allProducts = new Longgan.Logics.Home.ProductsLogic().GetProducts();
                                int productsCount = allProducts.Count;
                            }
                            <span class="stat-count">@productsCount</span>
                            <p class="stat-detail">产品数量</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6" data-effect="slide-bottom">
                        <div class="stat">
                            @{
                                List<Longgan.Models.Home.SetCase> allCases = new Longgan.Logics.Home.CaseLogic().GetCases();
                                int casesCount = allCases.Count;
                            }
                            <span class="stat-count">@casesCount</span>
                            <p class="stat-detail">成功案例</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>

</div>
